<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rkapoors.attendanceapp.compiledelactivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Compile"
        android:id="@+id/compilebutton"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Delete"
        android:id="@+id/delbutton"
        android:textStyle="bold|italic"
        android:textColor="#f00"
        android:textSize="20sp"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/compilebutton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Records will be deleted for selected branch."
        android:id="@+id/textView"
        android:textColor="#f00"
        android:layout_above="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance for entered roll no. ."
        android:id="@+id/textView3"
        android:layout_above="@+id/compilebutton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-4dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:hint="Enter roll no."
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/branchspinner"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText2"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/categoryspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/branchspinner"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important : Necessary after semester / session."
        android:id="@+id/textView7"
        android:textStyle="bold|italic"
        android:textColor="#000"
        android:layout_above="@+id/delbutton"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/groupspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/categoryspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/yearspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/groupspinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Year"
        android:id="@+id/textView9"
        android:textStyle="italic"
        android:layout_below="@+id/groupspinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group"
        android:id="@+id/textView10"
        android:textStyle="italic"
        android:layout_below="@+id/categoryspinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:id="@+id/textView11"
        android:textStyle="italic"
        android:layout_below="@+id/branchspinner"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Branch"
        android:id="@+id/textView12"
        android:textStyle="italic"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-4dp" />
</RelativeLayout>
