<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="rkapoors.attendanceapp.MainActivity"
    >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Check"
        android:id="@+id/chkbutton"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/updatebutton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="New Attendance"
        android:id="@+id/newbutton"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/imagesandroid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Update"
        android:id="@+id/updatebutton"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_above="@+id/newbutton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Compile / Delete"
        android:id="@+id/compiledelbutton"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_above="@+id/chkbutton"
        android:layout_alignParentStart="true"
        android:textColor="#f00"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance of selected date."
        android:id="@+id/textView4"
        android:layout_above="@+id/chkbutton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendance till date."
        android:id="@+id/textView5"
        android:layout_above="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Append roll no.s to today's attendance"
        android:id="@+id/textView6"
        android:layout_above="@+id/updatebutton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important : Necessary after semester / session."
        android:id="@+id/textView8"
        android:textColor="#000"
        android:textStyle="bold|italic"
        android:layout_above="@+id/compiledelbutton"
        android:layout_alignParentStart="true" />

</RelativeLayout>
