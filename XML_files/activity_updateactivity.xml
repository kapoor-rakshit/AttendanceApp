<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rkapoors.attendanceapp.updateactivity">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:hint="Enter Roll no.s"
        android:ems="10"
        android:id="@+id/updateeditText"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:inputType="number|textMultiLine" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/branchspinner"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/updateeditText"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/categoryspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/branchspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Update"
        android:textColor="#000"
        android:id="@+id/submitbutton"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/groupspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/categoryspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:id="@+id/yearspinner"
        android:background="#eee"
        android:popupBackground="#eeffff"
        android:textAlignment="center"
        android:layout_below="@+id/groupspinner"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Branch"
        android:id="@+id/textView17"
        android:textStyle="italic"
        android:layout_below="@+id/updateeditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:id="@+id/textView18"
        android:textStyle="italic"
        android:layout_below="@+id/branchspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Group"
        android:id="@+id/textView19"
        android:textStyle="italic"
        android:layout_below="@+id/categoryspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Year"
        android:id="@+id/textView20"
        android:textStyle="italic"
        android:layout_below="@+id/groupspinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />
</RelativeLayout>
